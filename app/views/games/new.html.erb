<h1>New Game</h1>
<ul class="list-inline">
<% @letters.each do |letter| %>
  <li class="bg-primary"> <%= letter %></li>
  <% end %>
</ul>
<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Your word">
  <input type="submit" value= "Play" class="btn btn-primary">
  <input name="letters" type="hidden" value="<%= @letters.join %>">
</form>
